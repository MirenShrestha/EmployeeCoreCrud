@model EmployeeCoreCrud.Models.User
@{
    ViewBag.Title = "Login";
    Layout = "";
}
<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/custom.css">
    <title>Admin Login</title>
</head>
<body>
    <div id="wrapper">
        <!-- SIDEBAR START -->
        <aside class="login-sidebar text-right d-none d-md-block">
            <div style="text-align:center">
                <img src="~/images/infodev_logo_white-2.3af35feb.svg" alt="" width="70%">
        </aside>
        <!-- SIDEBAR END -->
        <div class="container">
            <div class="row">

                <div class="col-12 text-right mt-3">
                    <a href="#" data-toggle="modal" data-target="#modalLanguage">
                    </a>
                </div>  <div class="col-md-4 offset-md-4 offset-xs-1 col-xs-10">
    <h4 class="mt-md-5 mt-1 pt-5">Login</h4>
    <!-- FORM START -->
    @if (ViewBag.TempMsg != null)
    {
        <span style="color:red" class="error-signup">Login Failed.Please Enter Correct Username/Password</span>
    }
    @*Login Form*@
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="UserId" />
                <div class="form-group">
                    <label asp-for="UserName" class="control-label"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" type = "password" />
                    <span asp-validation-for="Password" class="text-danger" ></span>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <input type="submit" value="Login" class="btn btn-primary btn-block" />
                    </div>
                </div>
            </form>
        </div>
    </div>
    <!-- Login FORM END -->
</div>
            </div>
        </div> <!-- container end -->
    </div>

    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/popper.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/main.js"></script>
    <script src="~/js/form-validator.js"></script>

</body>
</html>